<p id="notice"><%= notice %></p>
<style>
      h1 {
        /* background: #000 url(shrek.jpg); Фоновый цвет и фоновый рисунок */
        color: #FF69B4; /*Цвет текста на странице*/
        /* background-attachment: fixed; Фон страницы фиксируется */
        /* background-repeat: repeat-x; Изображение повторяется по горизонтали */
        font-size: 60px;
      }
      td {
        /* background: #000 url(shrek.jpg); Фоновый цвет и фоновый рисунок */
        color: #FF0000; /*Цвет текста на странице*/
        font-size: 15px;
      }
      th {
        /* background: #000 url(shrek.jpg); Фоновый цвет и фоновый рисунок */
        color: #FA8072; /*Цвет текста на странице*/
        font-size: 30px;
      }
      table {
        width: 500px;
        height: 100px;
      }
      tbody {
        font-size: 10px;
      }
      
</style>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th >Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="50"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
